<?xml version="1.0"?>
<config>
  <sections>
    <nopro_bluemoon>
      <class>seperator-top</class>
      <label>NoPro-Blue Moon</label>
      <!-- 
      <tab>general</tab>
      <tab>catalog</tab>
      <tab>customer</tab>
      <tab>sales</tab>
      <tab>service</tab>
      <tab>advanced</tab>
      -->
      <tab>service</tab>
      <frontend_type>text</frontend_type>
      <sort_order>301</sort_order><!-- OAuth has 300 -->
      <show_in_default>1</show_in_default>
      <show_in_website>1</show_in_website>
      <show_in_store>1</show_in_store>
      <groups>
	<view>
	  <label>Blue Moon settings</label>
	  <frontend_type>text</frontend_type>
	  <sort_order>10</sort_order>
	  <show_in_default>1</show_in_default>
	  <show_in_website>1</show_in_website>
	  <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enable Bluemoon</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <items_per_page>
                            <label>News Per Page</label>
                            <comment>Empty value is the same as default 20.</comment>
                            <sort_order>30</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </items_per_page>
                        <days_difference>
                            <label>Number of days since a post has been marked as recently added</label>
                            <comment>Empty value is the same as default 3.</comment>
                            <sort_order>50</sort_order>
                            <depends><enabled>1</enabled></depends>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </days_difference>
                    </fields>
	</view>

	<section_2>
	  <label>settings 2</label>
	  <frontend_type>text</frontend_type>
	  <sort_order>20</sort_order>
	  <show_in_default>1</show_in_default>
	  <show_in_website>1</show_in_website>
	  <show_in_store>1</show_in_store>
          <fields>
            <enabled_2>
	      <label>enabled 2</label>
              <frontend_type>select</frontend_type>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>10</sort_order>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </enabled_2>
	    
            <chooser>
	      <label>choose fields</label>
              <frontend_type>textarea</frontend_type>
              <comment>some fields</comment>
              <source_model>adminhtml/system_config_source_yesno</source_model>
              <sort_order>20</sort_order>
              <depends><enabled_2>1</enabled_2></depends>
              <show_in_default>1</show_in_default>
              <show_in_website>1</show_in_website>
              <show_in_store>1</show_in_store>
            </chooser>
          </fields>
	</section_2>
	
	<section_3>
	  <label>settings 3</label>
	  <frontend_type>text</frontend_type>
	  <sort_order>30</sort_order>
	  <show_in_default>1</show_in_default>
	  <show_in_website>1</show_in_website>
	  <show_in_store>1</show_in_store>
	</section_3>
	
      </groups>
    </nopro_bluemoon>
  </sections>
</config>
